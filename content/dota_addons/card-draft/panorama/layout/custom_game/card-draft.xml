<!--
    UI structure for the draft screen.

Replaces hero selection.
-->
<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/card-draft.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/card-draft.js" />
  </scripts>
  <Panel class="draft-container">
    <Label class="title" text="#addon-name" />

    <Panel id="timer">
      <Label id="timer-text">Timer</Label>
    </Panel>
    <Panel id="cards">
      <Panel id="ability-cards" />
      <Panel id="ultimate-cards" />
      <Panel id="hero-cards" />
    </Panel>
    <Panel id="confirmed-picks"/>
  </Panel>
</root>
